 <% if @player.errors.any? %>
    <div class="alert alert-danger"> 
    <p>There are <%= @player.errors.count %> errors.</p>
    </div>
    <ul>
      <% @player.errors.full_messages.each do |message| %>
      <li class="text-danger"> <%= message %> </li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :downloadable, "Allow others to download this player" %>
    <%= f.check_box :downloadable %>
  </div>

  <div class="form-group">
    <%= f.label :playable, "Allow others to compete against this player" %>
    <%= f.check_box :playable %>
  </div>

  <div class="form-group">
    <%= f.label :upload, 'Upload file' %>
    <%= f.file_field :upload, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :contest_id, "Contest" %>
    <%= f.collection_select(:contest_id, Contest.all, :id, :name, class: 'form-control') %>
  </div>