<h1>Sign Up!</h1>

<%= form_for @user do |f| %>
  <%= f.label :username, 'username' %>
  <%= f.text_field :username %>
  <%= f.label :password, 'password' %>
  <%= f.password_field :password %>
  <%= f.label :confirmation, 'confirmation' %>
  <%= f.password_field :confirmation %>
  <%= f.submit 'submit' %>
<% end %>