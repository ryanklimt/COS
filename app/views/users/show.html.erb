<% provide(:title, @user.username) %>
<h2>User Information</h2>
<p><%= @user.username %>: <%= @user.email %> | <%= link_to "edit", edit_user_path(@user) %></p>

<% if  @user.contest_creator? %>
<h2>Referees</h2>
<h4><%= @user.referees.length%> referees</h4>
<ul>
  <%= render partial: "user_referees", collection: @user.referees, as: :referee%>
</ul>
<p><%= link_to "New Referee", new_referee_path %></p>
<% end %>

<h2>Players</h2>
<h4><%=@user.players.length%> players</h4>
<ul>
  <%= render partial: "user_players", collection: @user.players, as: :player%>
</ul>
<p><%= link_to "New Player", new_player_path %></p>