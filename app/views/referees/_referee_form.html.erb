 <% if @referee.errors.any? %>
    <div class="alert alert-danger"> 
    <p>There are <%= @referee.errors.count %> errors.</p>
    </div>
    <ul>
      <% @referee.errors.full_messages.each do |message| %>
      <li class="text-danger"> <%= message %> </li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :rules_url %>
    <%= f.text_field :rules_url, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :players_per_game %>
    <%# f.text_field :players_per_game, class: 'form-control'%>
    <%= f.select :players_per_game, 1..10, {}, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :upload, 'Upload file' %>
    <%= f.file_field :upload, class: 'form-control'%>
  </div>