<!DOCTYPE html>
<html>
<head>
  <title>GameContestServer</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% flash.each do |level, message| %>
    <div class="alert alert-<%= level %>"><%= message %></div>
  <% end %>
  
  <div class="container">
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><b>Game Contest Server</b></a>
      </div>
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if params[:action] == 'index' %>"><a href="/users">Users</a></li>
        <li class="<%= 'active' if params[:action] == 'new' %>"><a href="/signup">Signup</a></li>
        <li class="<%= 'active' if params[:action] == 'edit' %>"><a href="/users/4/edit">Edit</a></li>
      </ul>
    </nav>
    <%= yield %>
  </div>

</body>
</html>
